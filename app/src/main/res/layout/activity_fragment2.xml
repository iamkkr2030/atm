<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".Fragment2">

    <TextView
        android:id="@+id/current_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 금액: 0원"
        android:textSize="40sp"
        android:textColor="@color/primary_color"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/amount_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:hint="금액 입력"
        android:inputType="number"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/current_amount_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/deposit_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="입금"
        android:background="@drawable/button_style"
        app:layout_constraintTop_toBottomOf="@id/amount_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/withdraw_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="출금"
        android:background="@drawable/button_style"
        app:layout_constraintTop_toBottomOf="@id/deposit_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
